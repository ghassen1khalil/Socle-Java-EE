<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>src</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>com.sifast.socle.javaee:socle-javaee-common</include>
				<include>com.sifast.socle.javaee:socle-javaee-persistence</include>
				<include>com.sifast.socle.javaee:socle-javaee-service</include>
				<include>com.sifast.socle.javaee:socle-javaee-web</include>
			</includes>
			<sources>
				<fileSets>
					<fileSet>
						<excludes>
							<exclude>target/**</exclude>
							<exclude>.settings/**</exclude>
							<exclude>.*</exclude>
						</excludes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<directory>socle-javaee-functional-test</directory>
			<excludes>
				<exclude>target/**</exclude>
				<exclude>.settings/**</exclude>
				<exclude>.*</exclude>
				<exclude>*.log</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<includes>
				<include>descriptor-assembly-project-to-zip.xml</include>
				<include>descriptor-assembly-infrastructure-to-zip.xml</include>
				<include>pom.xml</include>
				<include>ReadMe.md</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>